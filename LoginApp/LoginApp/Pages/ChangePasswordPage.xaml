<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginUser.Pages.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Current Password" Text="{Binding CurrentPassword}" />
            <Entry Placeholder="New Password" Text="{Binding NewPassword}" />
            <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" />
            <Button Text="Change Password" Command="{Binding ChangePasswordCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>